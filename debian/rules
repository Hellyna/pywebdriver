#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

DESTDIR=debian/pywebdriver
CONFDIR=$(DESTDIR)/etc/pywebdriver
APPDIR=$(DESTDIR)/usr/share/pyshared/pywebdriver


%:
	dh $@ --with python2


override_dh_auto_install:
	# Create Configuration Folder
	mkdir -p $(CONFDIR)
	
	# Create Application Folder
	mkdir -p $(APPDIR)
	mkdir -p $(APPDIR)/librairies
	mkdir -p $(APPDIR)/librairies/escpos
	cp pywebdriver.py $(APPDIR)
	cp librairies/*.py $(APPDIR)/librairies
	cp librairies/escpos/*.py $(APPDIR)/librairies/escpos
